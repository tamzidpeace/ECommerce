<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/slogan_category">

        <ImageView
            android:id="@+id/t_shirts"
            android:src="@drawable/tshirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:src="@drawable/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/female_dresses"
            android:src="@drawable/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/sweaters"
            android:src="@drawable/sweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear1_category_layout">

        <ImageView
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/purcses_bags_wallets"
            android:src="@drawable/purses_bags"
            android:layout_width="90dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/hats_caps"
            android:src="@drawable/hats"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/shoes"
            android:src="@drawable/shoess"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear2_category_layout">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:src="@drawable/headphoness"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:src="@drawable/laptops"
            android:layout_width="90dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/watches"
            android:src="@drawable/watches"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/mobile_phone"
            android:src="@drawable/mobiles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>